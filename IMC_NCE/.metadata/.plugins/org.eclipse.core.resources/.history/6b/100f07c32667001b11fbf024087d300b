package br.senai.sp.jandira;

import java.time.LocalDate;

import br.senai.sp.jandira.model.Pessoa;

public class Academia {

	public static void main(String[] args) {
		Pessoa pessoa1 = new Pessoa();
		pessoa1.setNome("Ali");
		pessoa1.setSexo('F');
		System.out.println(pessoa1.getSexo()); 
		pessoa1.setPeso(50);
		pessoa1.setAltura(1.80);
		System.out.println(pessoa1.getImc());
		System.out.println(pessoa1.getStatusImc());
		LocalDate localDate = LocalDate.now();
		pessoa1.setDataNacimento(localDate.of(2003, 11, 3));
		System.out.println(pessoa1.getIdade());
		System.out.println(pessoa1.getNdc());
		//System.out.println("Ano: " + localDate.getYear());
		
		
	}

}
